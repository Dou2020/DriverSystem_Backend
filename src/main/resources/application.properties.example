spring.application.name=DriverSystem_Back

# URL de conexion a la base de datos PostgreSQL
spring.datasource.url=jdbc:postgresql://127.0.0.1/car_repair_shop


# Usuario y contraseña de la base de datos
spring.datasource.username=postgres
spring.datasource.password=12345678

# Driver de PostgreSQL
spring.datasource.driver-class-name=org.postgresql.Driver

# Configuracion de JPA (Hibernate)
# 'update': actualiza el esquema automáticamente. Bueno para desarrollo.
# 'validate': valida que el esquema coincida con las entidades.
# 'create': crea el esquema cada vez, borrando datos.
# 'create-drop': crea y borra el esquema al inicio y fin.
# 'none': no hace nada. Ideal para producción usando migraciones.
spring.jpa.hibernate.ddl-auto=none

# Temporalmente permite la limpieza
#spring.flyway.clean-disabled=false
# �PELIGRO! Limpia la BD al arrancar
#spring.flyway.clean-at-start=true

# Muestra el SQL que se esta ejecutando (Util para depurar)
spring.jpa.show-sql=true

# Configuraci�n de envio de correo
spring.mail.host=smtp.gmail.com
spring.mail.port=587
spring.mail.username=tu_correo@gmail.com
spring.mail.password=tu_contraseña_o_app_password
spring.mail.properties.mail.smtp.auth=true
spring.mail.properties.mail.smtp.starttls.enable=true
spring.mail.properties.mail.smtp.ssl.trust=smtp.gmail.com
